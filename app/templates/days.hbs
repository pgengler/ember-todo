{{#top-nav}}
{{date-picker-icon action="changeDate"}}
{{/top-nav}}
<div class="days">
	{{#each day in days}}
		{{#day-tasks day=day store=store classNameBindings="isPast:past isCurrent:current isFuture:future"}}
			<h1>{{day-name day.date}}</h1>
			<h2>{{format-date day.date}}</h2>
		{{/day-tasks}}
	{{/each}}
	{{#day-tasks day=undated store=store}}
		<h1>Other</h1>
	{{/day-tasks}}
</div>
