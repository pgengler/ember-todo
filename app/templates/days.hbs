<div class="days">
  {{#each this.days as |list|}}
    <DayTasks
      @list={{list}}
      @editingStart={{action this.stopPolling}}
      @editingEnd={{action this.startPolling}}
    />
  {{/each}}
  {{#each this.lists as |list|}}
    <TaskList
      @list={{list}}
      @editingStart={{action this.stopPolling}}
      @editingEnd={{action this.startPolling}}
    />
  {{/each}}
</div>
