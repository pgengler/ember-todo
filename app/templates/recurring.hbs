{{#each}}
	<h1>{{day}}</h1>
	<ul>
		{{#each task in tasks itemController="recurringTask"}}
		<li>
			{{#if task.isEditing}}
				{{view "edit-task" class="edit" value=task.description insert-newline="updateTask"}}
			{{else}}
				<span {{action "editTask" on="doubleClick"}}>{{task.description}}</span>
			{{/if}}
		</li>
		{{/each}}
	</ul>
{{/each}}
