<div class="item-list">
  {{#each group in groupedContent}}
  <div class="items">
    <h3>{{day-of-week group.name}}</h3>
    <h4>{{format-date group.name}}</h4>

    {{render "item-list" group}}
  </div>
  {{/each}}
</div>

<form {{action "createItem" on="submit"}}>
    <label>
        Event
        {{input id="event" value=newEvent}}
    </label>
    <br>
    <label>
        Location
        {{input id="location" value=newLocation}}
    </label>
    <br>
    <label>
        Time
        {{input id="start" value=newStartTime}}
        &ndash;
        {{input id="end" value=newEndTime}}
    </label>
    <br>
    <button type="submit">Add</button>
</form>
