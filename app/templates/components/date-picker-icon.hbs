<RangeDatepicker
    @onSelect={{action "changeDate"}}
    @selected={{@dateRange}}
    @renderInPlace={{true}}
  as |dp|
>
  <dp.Trigger>
    {{fa-icon "calendar"}}
  </dp.Trigger>
  <dp.Content>
    <div class="date-picker-content">
      {{dp.Nav}}
      {{dp.Days}}
    </div>
  </dp.Content>
</RangeDatepicker>
