<nav class="top-nav">
  <div class="todolist-actions">
    {{#link-to "days" (query-params date=null) title="Home"}}
      {{fa-icon icon="home"}}
    {{/link-to}}
    {{#link-to "recurring" title="Recurring tasks"}}
      {{fa-icon icon="list"}}
    {{/link-to}}
    {{fa-icon icon="plus" click=(action this.toggleModal) data-test-add-task=true}}
    <DatePickerIcon @dateSelected={{action @changeDate}} @dateRange={{@selectedDate.dateRange}} />
  </div>
  <div class="flash-messages">
    {{#each @flashMessages.queue as |flash|}}
      <FlashMessage @flash={{flash}} />
    {{/each}}
  </div>
  <div class="user-actions">
    {{fa-icon "sign-out" click=(action @logout) data-test-logout=true}}
  </div>

  {{#if this.isShowingNewTaskModal}}
    <ModalDialog
      @containerClass="new-task-dialog"
      @onClose={{action this.toggleModal}}
      @targetAttachment="center"
      @translucentOverlay={{true}}
    >
      <NewTaskForm
        @cancel={{action this.closeModal}}
        @onTaskCreated={{action this.closeModal}}
      />
    </ModalDialog>
  {{/if}}
</nav>
